{% set currentPath = path(app.request.attributes.get('_route'),
    app.request.attributes.get('_route_params')) %}
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>{% block title %}Tableau de bord &late;{% endblock %}</title>
  <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
  {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
  {% block stylesheets %}
  {{ encore_entry_link_tags('app') }}
  <link rel="stylesheet" href="{{ asset('build/app.css') }}">
  {% endblock %}

  {% block javascripts %}
  {{ encore_entry_script_tags('app') }}
  <script src="{{ asset('build/runtime.js') }}" defer></script>
  <script src="{{ asset('build/app.js') }}" defer></script>
  <script src="{{ asset('build/fontawesome.js') }}" defer></script>
  {% endblock %}
</head>
<body class="min-vh-100 p-0">
  <nav class="navbar navbar-expand-md navbar-light fixed-top bg-cyan">
    <div class="container-fluid py-2">
      <a class="navbar-brand" href="#">
        Tableau de bord &late;
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">
          <li class="nav-item">
            <a class="nav-link {{ currentPath == path('admin_index') ? 'active' : '' }}" aria-current="page" href="{{ path('admin_index') }}">
              Démarrer
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="{{ path('app_index') }}">
            <span class="me-3">|</span>
              Aller sur le site
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container-fluid p-0">
    <div class="min-vh-100 bg-white">
      {# <aside class="col-3 pt-5">
        <div class="h-100 me-5">
          <div class="h-100 shadow-sm bg-white">
            {{ render(path('admin_meta_entities')) }}
          </div>
        </div>
      </aside> #}

      <section class="d-flex flex-column flex-nowrap">
        <!-- #pageHeader -->
        <div id="pageHeader" class="d-flex flex-column flex-nowrap bg-secondary text-black">
          <!-- #pageTitle -->
          <div id="pageTitle" class="col-12">
            <div class="container-fluid p-0">
              <div id="pageHeader" class="row g-0">
                <!-- #pageTitle -->
                <div id="pageTitle" class="col-12 mb-5">
                  {% block pageTitle %}
                  <h3 class="text-center">
                    Tableau de bord
                  </h3>
                  {% endblock %}
                </div>
                <!-- #pageActions -->
                <div class="col-12">
                  <div class="d-flex flex-row flex-nowrap justify-content-around mb-5">
                    {% block pageActions %}{% endblock %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- #pageBody -->
        <div class="row g-0 p-5">
          <div class="col-12">
            {% block body %}{% endblock %}
          </div>
        </div>
      </section>
    </div>
  </main>

</body>
</html>
