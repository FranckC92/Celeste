{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Commentaire</th>
                <th>CommentaireID</th>
                <th>OnetoMany</th>
                <th>Slug</th>
                <th>Auteur</th>
                <th>Contenu</th>
                <th>DateCreation</th>
                <th>DateModification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.Commentaire }}</td>
                <td>{{ commentaire.commentaireID }}</td>
                <td>{{ commentaire.OnetoMany }}</td>
                <td>{{ commentaire.slug }}</td>
                <td>{{ commentaire.auteur }}</td>
                <td>{{ commentaire.contenu }}</td>
                <td>{{ commentaire.dateCreation ? commentaire.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commentaire.dateModification ? commentaire.dateModification|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_site_commentaire_show', {'id': commentaire.id}) }}">show</a>
                    <a href="{{ path('app_site_commentaire_edit', {'id': commentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_site_commentaire_new') }}">Create new</a>
{% endblock %}
